{
  "compilerOptions": {
    "strict": true,
    "downlevelIteration": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "types": ["node"],
    "outDir": "build"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build/**/*"]
}
